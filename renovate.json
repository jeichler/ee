{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>jeichler/renovate-bot"
  ],
  "regex": {
    "pinDigests": true
  },
  "regexManagers": [
    {
      "description": "Update versions in execution-environment.yml",
      "fileMatch": [
        "(^|/)execution-environment\\.yml$"
      ],
      "matchStrings": [
        "base_image:\\n\\s+name:[\\W]*(?<depName>.*?):(?<currentValue>.*?)[\\W]*\\n"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
